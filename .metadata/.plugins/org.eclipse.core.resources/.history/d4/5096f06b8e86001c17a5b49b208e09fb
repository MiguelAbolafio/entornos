import java.util.Scanner;
public class horas {

	public static void main(String[] args) {
		
		int horas,dias,semanas,horasrestantes;
	
		Scanner teclado = new Scanner(System.in);
		
		System.out.println("Inserta un numero total de horas");
		
		horas=teclado.nextInt();
		
		dias=horas/24;
		semanas=horas/164;
		horasrestantes=horas-semanas-dias;
		
		
		System.out.println(horas+" horas son "+semanas+" semanas "+dias+" dias y "+horas restantes);
	}

}
